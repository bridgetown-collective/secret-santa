{
  "compilerOptions": {
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "types",
    "components",
    "lib",
    "pages",
    "scripts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "jsx": "react-jsx"
    }
  }
}
